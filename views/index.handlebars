<div class="container">

	<img src="assets/burger.png" class="center-block">
	


<div class="container top">
	<div class="col-md-6">
		<h3><font color="#b12411">Burgers to Devour</font></h3>
		<ul class="list-group">
			{{#each burgers}}
				{{#unless this.devoured}}
					<li class="list-group-item">
						{{this.burger_name}}
						<form action="/{{this.id}}?_method=PUT" method="POST">
							<input type="hidden" name="devoured" value="1">
							<button type="submit" class="btn btn-default">Devour It!</button>
						</form>
					</li>
				{{/unless}}
			{{/each}}
		</ul>


	</div>


	<div class="col-md-6">
		<h3><font color="#b12411">Devoured Burgers</font></h3>
		<ul class="list-group">
			{{#each burgers}}
				{{#if this.devoured}}
					<li class="list-group-item">
						{{this.burger_name}}
						<form action="/{{this.id}}?_method=PUT" method="POST">
							<input type="hidden" name="devoured" value="0">
							<button type="submit" class="btn btn-default">Another one!</button>
						</form>

					
					</li>
				{{/if}}
			{{/each}}
		</ul>
	</div>
	
	<div class="container col-md-4 col-md-offset-4">
		<form id="target" class="center-block" action="/" method="POST">
			<textarea class="form-control" id="name" rows="3" name="name" placeholder="Enter a burger you would like to devour!"></textarea>
			<button type="button" id="button" class="center-block btn btn-default top">Submit</button>
		</form>
	</div>
</div>

</div>